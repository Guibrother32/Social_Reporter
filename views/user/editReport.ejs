<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/reportForm.css">
</head>

<body>
    <%- include('../includes/navigation.ejs')%>
    <main>
        <form action="/report/editReport" method="POST" enctype="multipart/form-data">
            <div class="grid">
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">
                            Modificar Report
                        </h1>
                    </header>
                    <div class="card__content">
                        <div class="form-control2">
                            <label for="title">Título: </label>
                            <input type="text" name="title" id="title" value="<%=report.title%>" maxlength="45">
                        </div>
                        <div class="form-control2">
                            <label for="location">Local: </label>
                            <input type="text" name="location" id="location" value="<%=report.location%>" maxlength="30">
                        </div>
                        <div class="form-control2">
                            <label for="description">Descrição:</label>

                            <textarea id="description" name="description" rows="4" cols="26"
                                maxlength="113"><%=report.description%></textarea>
                        </div>
                        <div class="form-control2">
                            <label for="image">Imagem: </label>
                            <input type="file" name="image" id="image">
                            <input type="hidden" name="imagePath" id="imagePath" value="<%=report.image%>">
                        </div>

                        <br>
                        <br>
                    </div>
                    <hr>
                    <div class="card__actions">
                        <button class="btn" type="submit">Enviar</button>
                    </div>
                </article>
            </div>
            <input type="hidden" id="_csrf" name="_csrf" value="">
            <input type="hidden" name="id" value="<%=+report.idComplaint%>">
        </form>
    </main>
    <%- include('../includes/footer.ejs') %>